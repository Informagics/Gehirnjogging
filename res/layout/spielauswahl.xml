<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_menue"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="87dp" />

    <Button
        android:id="@+id/btn_Matheauswahl"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:onClick="Spieloeffnen"
        android:text="@string/Mathe"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_Quizauswahl"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:onClick="Spieloeffnen"
        android:text="@string/Informatik"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_Cableauswahl"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:onClick="Spieloeffnen"
        android:text="@string/Kabelbinder"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_BitOutauswahl"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button"
        android:onClick="Spieloeffnen"
        android:text="@string/BitOut"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_Memoryauswahl"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:onClick="Spieloeffnen"
        android:text="@string/Memory"
        android:textColor="#FFFFFF" />

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</LinearLayout>